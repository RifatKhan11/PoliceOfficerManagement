@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @* <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script> *@
    <script type="text/javascript">
         
          function Delete(Id) {
            swal({
                title: 'Are you sure?',
                text: 'Do you want to delete this data?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then(function (res) {
                if (res) {
                    $.ajax({
                        url: "/EmployeeArea/EmployeInfo/InActiveEmployee",
                        type: "POST",
                        data: { id: Id },
                        success: function (res) {
                            if (res == '1') {
                                swal('', 'Deleted Successfully!', 'success');
                                location.reload(true);
                            }
                            else {
                                swal('', 'Invalid Attempt!', 'warning');
                            }
                        }
                    });
                }
            }, function (dismiss) {
                if (dismiss === 'cancel' || dismiss === 'close') {
                    return false;
                }
            });
        }

       function extractDate(dateString) {
            return dateString ? dateString.match(/^\d{4}-\d{2}-\d{2}/)?.[0] : '';
        }

        function edit(Id,nameEn,nameBn, employeeCode, nidNumber,joiningDate,retirementDate,joiningRankId,homeDistrict,homeUpazila,reMarks,personalPhoneNumber,officePhoneNumber)
        {
            $('#Id').val(Id);
            $('#nameEn').val(nameEn);
            $('#nameBn').val(nameBn);
            $('#employeeCode').val(employeeCode);
            $('#nidNumber').val(nidNumber);
             
            $('#joiningDate').val(extractDate(joiningDate));
            $('#retirementDate').val(extractDate(retirementDate));
            $('#joiningRankId').val(joiningRankId);
            $('#homeDistrict').val(homeDistrict);
            $('#homeUpazila').val(homeUpazila);
            $('#reMarks').val(reMarks);
            $('#personalPhoneNumber').val(personalPhoneNumber);
            $('#officePhoneNumber').val(officePhoneNumber);
            // $('#employeeCreate').show();
            // $('#employeeList').hide();
            
        }

        function resetForm() {
            $('#employeeForm')[0].reset();
             
        }
