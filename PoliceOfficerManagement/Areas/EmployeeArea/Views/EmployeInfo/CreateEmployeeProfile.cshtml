        //     $('#employeeCreate').show();
        //     $('#employeeList').hide();

        // }
        // function btnCreate() {
        //     $('#employeeCreate').hide();
        //     $('#employeeList').show();

        // }
         
        function SaveData()
        {
            var data = $('#employeeForm').serialize();
            swal({
                title: 'Are you sure?',
                text: 'Do you want to save this data?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Save It!'
            }).then(function (res)
            {
                if (res) {
                    $.ajax({
                        url: "/EmployeeArea/EmployeInfo/CreateEmployeeProfile",
                        type: "POST",
                        data: data,
                        success: function (res)
                        {
                            if (res != 0) {
                                swal('', 'Save Successfully!', 'success');
                                location.reload(true);
                                //$('#employeeCreate').hide();
                                //$('#employeeList').Show();
                            }
