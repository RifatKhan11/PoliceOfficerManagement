@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutInitial.cshtml";
}
<style>

    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    overflow: hidden; /* Prevent scrolling */
}

body {
    display: flex;
    flex-direction: column;
}

.container {
    width: 100%;
    max-width: 90%;
    margin: 0 auto;
}

/* Header */
header {
    background-color: #2c3e50;
    padding: 1rem 0;
    color: white;
    text-align: center;
}

nav ul {
    list-style: none;
    display: flex;
        justify-content: flex-end;
    gap: 20px;
    padding: 0;
}

nav ul li {
    margin: 0;
}

nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
}

nav ul li a:hover {
    text-decoration: underline;
}

/* Hero Section */
.hero {
    background-image: url('/logo/BDpoloceLogoVector.png');
    background-size: cover;
    background-position: center;
    height: 100%;
    flex: 1;
    color: white;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

/* Hero Content */
.hero-content h1 {
    font-size: 48px;
    margin-bottom: 20px;
}

.hero-content p {
    font-size: 24px;
    margin-bottom: 30px;
}

.search-bar {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

.search-bar input {
    padding: 10px;
    width: 300px;
    border: none;
    border-radius: 5px;
    margin-right: 10px;
}

.search-bar button {
    padding: 10px 20px;
    background-color: #e74c3c;
    border: none;
    color: white;
    border-radius: 5px;
    cursor: pointer;
}

.search-bar button:hover {
    opacity: 0.9;
}

/* Footer */
footer {
    background-color: #2c3e50;
    color: white;
    padding: 20px 0;
    text-align: center;
}

/* Responsive adjustments */
@@media (max-width: 768px) {
    nav ul {
        gap: 10px;
    }

    .hero-content h1 {
        font-size: 32px;
    }

    .hero-content p {
        font-size: 18px;
    }

    .search-bar input {
        width: 200px;
    }
}

@@media (max-width: 480px) {
    .search-bar {
        flex-direction: column;
    }

    .search-bar input {
        width: 100%;
        margin: 0 0 10px 0;
    }

    .search-bar button {
        width: 100%;
    }
}

    footer {
        background-color: #2c3e50;
        color: white;
        padding: 10px 0; /* Reduced padding */
        text-align: center;
        font-size: 14px; /* Optional: smaller text for a compact footer */
    }
</style>


