 @model VillageViewModel
@{
    ViewData["Title"] = "Village Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card" style="width: 100%; margin-top: 30px; display: none" id="employeeCreate">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h5>Village Information</h5>

            </div>
            <div class="col-4">
                <button type="button" class="btn btn-secondary" style="float: right" onclick="btnCreate()">View List</button>

            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <form class="user" asp-area="MasterData" asp-controller="MasterData" asp-action="Village" method="post" id="employeeForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input name="Id" id="Id" hidden />
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Name English<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="villageName" name="villageName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Code<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="villageCode" name="villageCode" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Name Bangla<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="villageNameBn" name="villageNameBn" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Short Name<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="shortName" name="shortName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">District<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <select class="form-control" id="districtsId" name="districtsId">

                                    <option value="0" selected>Select</option>
                                    @foreach (var district in Model.Districts)
                                    {
                                        <option value="@district.Id">@district.districtName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Thana<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <select class="form-control" id="thanaId" name="thanaId">

                                    <option value="0" selected>Select</option>

                                </select>
                            </div>
                        </div>
                    </div>
                     

                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Active In-Active<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <select id="IsActive" name="IsActive" class="form-control">

                                    <option value="True">Active</option>
                                    <option value="False">In-Active</option>
                                </select>
                            </div>



                        </div>
                    </div>

                </div>
                <div style="height:20px;"></div>
                <div class="form-group row">

                    <div class="col-sm-12 mb-3">
                        <button type="submit" id="btnCheck" class="btn btn-secondary" style="float: right">Submit</button>
                        @* <button type="button" id="btnCheck" class="btn btn-secondary" style="float: right" onclick="SaveData()">Submit</button> *@
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


<div class="card" style="width: 100%; margin-top: 30px;" id="employeeList">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h5>Village List</h5>

            </div>
            <div class="col-4">
                <button type="button" class="btn btn-secondary" style="float: right" onclick="btnList()">Create New</button>

            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-bordered" id="villageTable" style="overflow: scroll;">
            <thead class="custom-thead">
                <tr>
                    <th>Sl Id</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>District</th>
                    <th>Thana</th>
                    <th>Union Ward</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
           @*  <tbody></tbody> *@
            <tbody>
                @{
                    int i = 1;
                }
                @if (Model.Villages.Count() != 0)
                {
                    @foreach (var item in Model.Villages)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.villageName</td>
                             <td>
                                @if (@item.villageCode == "null")
                                {
                                    @:
                                }
                                else
                                {
                                    @item.villageCode
                                }
                            </td>
                            <td>@item.districts?.districtName</td>
                            <td>@item.thana?.thanaName</td>
                            <td>@item.unionWard?.unionName</td>
                            <td>
                                @if (@item.isActive == true)
                                {
                                    @:Active
                                }
                                else if (@item.isActive == false)
                                {
                                    @:InActive
                                }
                            </td>
                            <td class="icon-container">
                                <i class="fa fa-edit" onclick="edit(@item.Id, '@item.villageName', '@item.villageNameBn','@item.villageCode','@item.districtsId','@item.thanaId','@item.unionWardId','@item.shortName','@item.isActive')"></i>
                                <i class="fa fa-window-close" style="color: red;" onclick="Delete(@item.Id)" title="Is Active"></i>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">No data available</td>
                    </tr>
                }
            </tbody>
        
        </table>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
     <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>  
    <script type="text/javascript">
        $(document).ready(function () {
            $('#districtsId').change(function () {
                var districtId = $(this).val();
                if (districtId) {
                    $.ajax({
                        url: '/MasterData/MasterData/GetThanasByDistrictId',
                        type: 'GET',
                        data: { districtId: districtId },
                        success: function (response) {
                            var selectDropdown = $('#thanaId');
                            selectDropdown.empty();
                            //selectDropdown.append('<option value="0" selected>Select</option>');
                            $.each(response, function (index, thana) {
                                selectDropdown.append('<option value="' + thana.Id + '">' + thana.thanaName + '</option>');
                            });
                        },
                        error: function () {
                            alert("Error loading districts.");
                        }
                    });
                } else {
                    $('#thanaId').empty();
                    $('#thanaId').append('<option value="0" selected>Select</option>');
                }
            });
            $('#thanaId').change(function () {
                var thanaId = $(this).val();
                if (thanaId) {
                    $.ajax({
                        url: '/MasterData/MasterData/GetUnionWardsByThanaId',
                        type: 'GET',
                        data: { thanaId: thanaId },
                        success: function (response) {
                            var selectDropdown = $('#unionId');
                            selectDropdown.empty();
                            //selectDropdown.append('<option value="0" selected>Select</option>');
                            $.each(response, function (index, union) {
                                selectDropdown.append('<option value="' + union.Id + '">' + union.unionName + '</option>');
                            });
                        },
                        error: function () {
                            alert("Error loading districts.");
                        }
                    });
                } else {
                    $('#unionWardId').empty();
                    $('#unionWardId').append('<option value="0" selected>Select</option>');
                }
            });

            //Common.Ajax('GET', `/MasterData/MasterData/GetVillageData`, [], 'json', ajaxVillage, false);


        });



        function ajaxVillage(resp) {
            console.log(resp);
            $('#villageTable').DataTable().destroy();
            $("#villageTable tbody").empty();
             
            $.each(resp, function (index, item) { 
                var i = index + 1;

                var newRow = `<tr>
                                        <td>${i}</td>
                                                <td>${item.villageName}</td>
                                                <td>${item.villageCode}</td>
                                                <td>${item.districts?.districtName}</td>
                                                <td>${item.thana?.thanaName}</td>
                                                <td>${item.unionWard?.unionName}</td>
                                                <td>${item.isActive}</td>
                                         
                                        <td>
                                                   @* <a class="btn btn-success" href="/Payroll/Fixation/ExamCenterAttendancePDF?id=${item.Id}&type=${item.ExamType}" target="_blank">Attendance Sheet</a>*@
                                        </td>
                                    </tr>`;

                 
                $("#villageTable tbody").append(newRow);
            });
             
            $('#villageTable').DataTable({
                "lengthMenu": [[500, 1000, 1500, 2000, -1], [50, 100, 150, 200, "All"]],
                 "pageLength": -1
            });
        }



        function Delete(Id) {
            swal({
                title: 'Are you sure?',
                text: 'Do you want to delete this data?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then(function (res) {
                if (res) {
                    $.ajax({
                        url: "/MasterData/MasterData/InActiveVillage",
                        type: "POST",
                        data: { id: Id },
                        success: function (res) {
                            if (res == '1') {
                                swal('', 'Deleted Successfully!', 'success');
                                location.reload(true);
                            }
                            else {
                                swal('', 'Invalid Attempt!', 'warning');
                            }
                        }
                    });
                }
            }, function (dismiss) {
                if (dismiss === 'cancel' || dismiss === 'close') {
                    return false;
                }
            });
        }



        function edit(Id, villageName, villageNameBn, villageCode, districtsId, thanaId, unionWardId, shortName, isActive) {
            $('#Id').val(Id);
            $('#villageName').val(villageName);
            $('#villageNameBn').val(villageNameBn);
            $('#villageCode').val(villageCode);
            $('#districtsId').val(districtsId);
            $('#thanaId').val(thanaId);
            $('#unionWardId').val(unionWardId);
            $('#shortName').val(shortName);
            $('#IsActive').val(isActive);
            $('#employeeCreate').show();
            $('#employeeList').hide();

            $('#districtsId').trigger('change');
            setTimeout(function () {
                $('#thanaId').trigger('change');
            }, 500);
             setTimeout(function () {
                $('#unionWardId').trigger('change');
            }, 1000);


        }

        function resetForm() {
            $('#employeeForm')[0].reset();

        }
        function btnList() {
            $('#employeeCreate').show();
            $('#employeeList').hide();

        }
        function btnCreate() {
            $('#employeeCreate').hide();
            $('#employeeList').show();

        }

        function SaveData() {
            var data = $('#employeeForm').serialize();
            swal({
                title: 'Are you sure?',
                text: 'Do you want to save this data?',
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Save It!'
            }).then(function (res) {
                if (res) {
                    $.ajax({
                        url: "/MasterData/MasterData/Village",
                        type: "POST",
                        data: data,
                        success: function (res) {
                            if (res != 0) {
                                swal('', 'Save Successfully!', 'success');
                                location.reload(true);
                                $('#employeeCreate').hide();
                                $('#employeeList').Show();
                            }
                            else {
                                swal('', 'Invalid Attempt!', 'warning');
                                return false;
                            }
                        }
                    });
                }
            }, function (dismiss) {
                if (dismiss === 'cancel' || dismiss === 'close') {
                    return false;
                }
            });
        }




    </script>
}
