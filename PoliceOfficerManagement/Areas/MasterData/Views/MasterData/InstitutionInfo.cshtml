    <script type="text/javascript">

           function Delete(Id) {
             swal({
                 title: 'Are you sure?',
                 text: 'Do you want to delete this data?',
                 type: 'warning',
                 showCancelButton: true,
                 confirmButtonColor: '#3085d6',
                 cancelButtonColor: '#d33',
                 confirmButtonText: 'Yes, delete it!'
             }).then(function (res) {
                 if (res) {
                     $.ajax({
                        url: "/MasterData/MasterData/InActiveInstitutionInfo",
                         type: "POST",
                         data: { id: Id },
                         success: function (res) {
                             if (res == '1') {
                                 swal('', 'Deleted Successfully!', 'success');
                                 location.reload(true);
                             }
                             else {
                                 swal('', 'Invalid Attempt!', 'warning');
                             }
                         }
                     });
                 }
             }, function (dismiss) {
                 if (dismiss === 'cancel' || dismiss === 'close') {
                     return false;
                 }
             });
         }



        function edit(Id, type, nameEn, nameBn, establishYear, placeInfo, instituteType) {
             $('#Id').val(Id);
            $('#type').val(type);
            $('#nameEn').val(nameEn);
            $('#nameBn').val(nameBn);
            //$('#establishYear').val(establishYear);
            if (establishYear) {
                let date = new Date(establishYear);
                let formattedDate = date.toISOString().split('T')[0];  // This gives 'yyyy-MM-dd' format
                $('#establishYear').val(formattedDate);
            }
            $('#placeInfo').val(placeInfo);
            $('#instituteType').val(instituteType);
             $('#employeeCreate').show();
             $('#employeeList').hide();

         }

         function resetForm() {
             $('#employeeForm')[0].reset();

