 @model RankViewModel
@{
    ViewData["Title"] = "Employee Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card" style="width: 100%; margin-top: 30px; display: none" id="employeeCreate">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h5>Rank Information</h5>

            </div>
            <div class="col-4">
                <button type="button" class="btn btn-secondary" style="float: right" onclick="btnCreate()">Employee List</button>

            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <form class="user" asp-area="MasterData" asp-controller="MasterDatas" asp-action="Rank" method="post" id="employeeForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input name="Id" id="Id" hidden />
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4"> Rank Name<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="rankName" name="rankName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Rank Code<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="rankCode" name="rankCode" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Rank Name BN<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="rankNameBN" name="rankNameBN" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Short Name<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="text" id="shortName" name="shortName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">Short Order<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="number" id="shortOrder" name="shortOrder" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-4">ForceCatId<span style="color: red">*</span></label>
                            <div class="col-md-8">
                                <input type="number" id="forceCatId" name="forceCatId" class="form-control" />
                            </div>
                        </div>
                    </div>
                     

                </div>
                <div style="height:20px;"></div>
                <div class="form-group row">

                    <div class="col-sm-12 mb-3">
                        <button type="button" id="btnCheck" class="btn btn-secondary" style="float: right" onclick="SaveData()">Submit</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


<div class="card" style="width: 100%; margin-top: 30px;" id="employeeList">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h5>Rank List</h5>

            </div>
            <div class="col-4">
                <button type="button" class="btn btn-secondary" style="float: right" onclick="btnList()">Create Rank</button>

            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-bordered" id="InfoTbl1" style="overflow: scroll;">
            <thead class="custom-thead">
                <tr>
                    <th>Sl Id</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Short Order</th>
                    <th>forceCatId</th> 
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @if (Model.Ranks.Count() != 0)
                {
                    @foreach (var item in Model.Ranks)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.rankName</td>
                            <td>@item.rankCode</td>
                            <td>@item.shortOrder</td>
                            <td>@item.forceCatId</td> >
                            <td class="icon-container">
                                <i class="fa fa-edit" onclick="edit(@item.Id, '@item.rankCode', '@item.rankName','@item.rankNameBN','@item.shortName','@item.shortOrder','@item.forceCatId')"></i>
                                <i class="fa fa-window-close" style="color: red;" onclick="Delete(@item.Id)" title="Is Active"></i>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @* <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script> *@
    <script type="text/javascript">

           function Delete(Id) {
             swal({
                 title: 'Are you sure?',
                 text: 'Do you want to delete this data?',
                 type: 'warning',
                 showCancelButton: true,
                 confirmButtonColor: '#3085d6',
                 cancelButtonColor: '#d33',
                 confirmButtonText: 'Yes, delete it!'
             }).then(function (res) {
                 if (res) {
                     $.ajax({
                        url: "/MasterData/MasterDatas/InActiveRank",
                         type: "POST",
                         data: { id: Id },
                         success: function (res) {
                             if (res == '1') {
                                 swal('', 'Deleted Successfully!', 'success');
                                 location.reload(true);
                             }
                             else {
                                 swal('', 'Invalid Attempt!', 'warning');
                             }
                         }
                     });
                 }
             }, function (dismiss) {
                 if (dismiss === 'cancel' || dismiss === 'close') {
                     return false;
                 }
             });
         }

         

        function edit(Id, rankCode, rankName, rankNameBN, shortName, shortOrder, forceCatId) {
             $('#Id').val(Id);
            $('#rankCode').val(rankCode);
            $('#rankName').val(rankName);
            $('#rankNameBN').val(rankNameBN);
            $('#shortName').val(shortName);
            $('#shortOrder').val(shortOrder);
            $('#forceCatId').val(forceCatId); 
             $('#employeeCreate').show();
             $('#employeeList').hide();

         }

         function resetForm() {
             $('#employeeForm')[0].reset();

         }
         function btnList() {
             $('#employeeCreate').show();
             $('#employeeList').hide();

         }
         function btnCreate() {
             $('#employeeCreate').hide();
             $('#employeeList').show();

         }

         function SaveData()
         {
             var data = $('#employeeForm').serialize();
             swal({
                 title: 'Are you sure?',
                 text: 'Do you want to save this data?',
                 type: 'warning',
                 showCancelButton: true,
                 confirmButtonColor: '#3085d6',
                 cancelButtonColor: '#d33',
                 confirmButtonText: 'Yes, Save It!'
             }).then(function (res)
             {
                 if (res) {
                     $.ajax({
                        url: "/MasterData/MasterDatas/Rank",
                         type: "POST",
                         data: data,
                         success: function (res)
                         {
                             if (res != 0) {
                                 swal('', 'Save Successfully!', 'success');
                                 location.reload(true);
                                  $('#employeeCreate').hide();
                                  $('#employeeList').Show();
                             }
                             else {
                                 swal('', 'Invalid Attempt!', 'warning');
                                 return false;
                             }
                         }
                     });
                 }
             }, function (dismiss)
             {
                 if (dismiss === 'cancel' || dismiss === 'close')
                 {
                     return false;
                 }
             });
         }




    </script>
}
